@model ProjetoDAAW.Models.Personagem

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Personagem</h1>

<div>
    <h4>Personagem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prsnag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prsnag)
        </dd>
        <dt class="col-sm-2">
            Filme
        </dt>
        <dd class="col-sm-10">
            @Model.Filme?.Titulo
        </dd>
        <dt class="col-sm-2">
            Artista
        </dt>
        <dd class="col-sm-10">
            @Model.Artista?.Nome
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>