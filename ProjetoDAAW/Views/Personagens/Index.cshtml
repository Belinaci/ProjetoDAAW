@model IEnumerable<ProjetoDAAW.Models.Personagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Personagem</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Personagem</a>
</p>
<div class="row justify-content-center">
    <div class="mt-2 col-md-4" text-center>
        <form asp-action="Index" method="get">
            <input name="Filtro" class="form-control" type="text" placeholder="Filtro" />
            <input class="btn btn-outline-danger col-12 mt-2" type="submit" value="Filtrar" />
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prsnag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtistaId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Prsnag)
                </td>
                <td>
                    <span>@item.Filme.Titulo</span>
                </td>
                <td>
                    <span>@item.Artista.Nome</span>
                </td>
                <td>
                    <div style ="display:flex; gap:10px; margin-top:10px;">

                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
