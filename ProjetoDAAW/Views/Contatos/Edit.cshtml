@model ProjetoDAAW.Models.Contato

@{
    ViewData["Title"] = "Editar Feedback";
}

<div class="container mt-5" style="max-width: 600px;">
    <!-- Título Principal -->
    <h1 class="text-center mb-4" style="font-size: 2rem; color: #333;">Editar Feedback</h1>

    <!-- Formulário de Edição -->
    <div class="p-4 rounded shadow-sm" style="background-color: #f9f9f9;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Campo Nome -->
            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Campo E-mail -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo Assunto -->
            <div class="form-group mb-3">
                <label asp-for="Assunto" class="form-label">Assunto</label>
                <input asp-for="Assunto" class="form-control" />
                <span asp-validation-for="Assunto" class="text-danger"></span>
            </div>

            <!-- Campo Mensagem -->
            <div class="form-group mb-3">
                <label asp-for="Mensagem" class="form-label">Mensagem</label>
                <textarea asp-for="Mensagem" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Mensagem" class="text-danger"></span>
            </div>

            <!-- Botão Salvar -->
            <div class="form-group text-center mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Botão Voltar -->
    <div class="text-center mt-4">
        <a asp-action="Admin" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}