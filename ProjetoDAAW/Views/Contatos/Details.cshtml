@model ProjetoDAAW.Models.Contato

@{
    ViewData["Title"] = "Detalhes do Feedback";
}

<div class="container mt-5" style="max-width: 600px;">
    <!-- Título Principal -->
    <h1 class="text-center mb-4" style="font-size: 2rem; color: #333;">Detalhes do Feedback</h1>

    <!-- Informações do Feedback -->
    <div class="p-4 rounded shadow-sm" style="background-color: #f9f9f9;">
        <div class="mb-3">
            <h5 style="color: #007BFF;">Nome</h5>
            <p class="mb-0">@Model.Nome</p>
        </div>

        <div class="mb-3">
            <h5 style="color: #007BFF;">E-mail</h5>
            <p class="mb-0">@Model.Email</p>
        </div>

        <div class="mb-3">
            <h5 style="color: #007BFF;">Assunto</h5>
            <p class="mb-0">@Model.Assunto</p>
        </div>

        <div class="mb-3">
            <h5 style="color: #007BFF;">Mensagem</h5>
            <p class="mb-0">@Model.Mensagem</p>
        </div>
    </div>

    <!-- Ações -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">Editar</a>
        <a asp-action="Admin" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>
