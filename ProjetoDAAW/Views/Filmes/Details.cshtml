@model ProjetoDAAW.Models.Filme

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GeneroId)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var genero in Model.Genero)
            {
                <span>@genero.Nome</span>
                <br />
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DtLancamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DtLancamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistaId)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var artista in Model.Artista)
            {
                <span>@artista.Nome</span>
                <br />
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Diretor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diretor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FtCapaFilme)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.FtCapaFilme" height="120" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
